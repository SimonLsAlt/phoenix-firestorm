<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
 border="true"
 follows="top|left"
 height="450"
 help_topic="panel_ai_direct2llm_tab"
 label="LLM Direct"
 layout="topleft"
 left="0"
 name="AIDirect"
 top="320"
 width="485">
    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="left|top"
     height="32"
     layout="topleft"
     left="10"
     top="14"
     word_wrap="true"
     name="ai_direct2llm_help_text"
     >
        Use this tab to send messages direct to the LLM and see the reply.
    </text>

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="10"
     name="ai_direct_llm_chat_with">
        Direct conversation with [AI_SERVICE_NAME]:
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="140"
     layout="topleft"
     left="6"
     top_pad="4"
     width="473" />

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="-136"
     height="136"
     layout="topleft"
     left="10"
     word_wrap="true"
     name="ai_chat_messages"
     width="465">
        No messages yet
    </text>

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="10"
     name="ai_send_direct_to">
        Enter message and send to [AI_SERVICE_NAME]:
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="130"
     layout="topleft"
     left="6"
     top_pad="4"
     width="473" />

    <text_editor
     enabled="true"
     follows="top"
     top_pad="-132"
     height="126"
     layout="topleft"
     left="10"
     max_length="1024"
     name="ai_chat_editor"
     width="465"
     word_wrap="true">
        No reply from chat system yet
    </text_editor>

    <check_box
     enabled="true"
     follows="top"
     top_pad="22"
     height="23"
     label="Include image:  "
     layout="topleft"
     left="20"
     font="SansSerif"
     name="include_pic"
     tool_tip="Checking this box sends an image with the direct AI message"
     top_delta="32"
     width="132" />

    <line_editor
     border_style="line"
     border_thickness="1"
     font="SansSerif"
     follows="left|top"
     left_pad="12"
     height="23"
     layout="topleft"
     max_length_bytes="128"
     name="ai_image_2_send"
     width="200" />

    <button
     enabled="true"
     height="24"
     follows="left|top"
     left_pad="12"
     layout="topleft"
     label="Pick"
     name="ai_pick_snap_btn"
     width="60" />

    <button
     enabled="true"
     height="24"
     follows="left|top"
     left="20"
     top_pad="10"
     layout="topleft"
     label="Send Message"
     name="ai_send_btn"
     width="120" />

</panel>
