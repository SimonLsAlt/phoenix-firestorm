<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
 border="true"
 follows="top|left"
 height="450"
 help_topic="panel_ai_direct2llm_tab"
 label="LLM Direct"
 layout="topleft"
 left="0"
 name="AIDirect"
 top="320"
 width="485">
    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="left|top"
     height="32"
     layout="topleft"
     left="10"
     top="14"
     word_wrap="true"
     name="ai_direct2llm_help_text"
     >
        Use this tab to send messages direct to the LLM and see the reply.
    </text>

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="10"
     name="AIDirectLLMChatWith">
        Direct conversation with [AI_SERVICE_NAME]:
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="160"
     layout="topleft"
     left="6"
     top_pad="4"
     width="473" />

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="-156"
     height="156"
     layout="topleft"
     left="10"
     word_wrap="true"
     name="ai_chat_messages"
     width="465">
        No messages yet
    </text>


    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="10"
     name="AISendDirectTo">
        Enter message and send to [AI_SERVICE_NAME]:
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="160"
     layout="topleft"
     left="6"
     top_pad="4"
     width="473" />

    <text_editor
     enabled="true"
     follows="top"
     top_pad="-156"
     height="156"
     layout="topleft"
     left="10"
     max_length="1024"
     name="ai_chat_editor"
     width="465"
     word_wrap="true">
        No reply from chat system yet
    </text_editor>

    <button
     enabled="true"
     height="24"
     follows="left|top"
     left="20"
     top_pad="10"
     layout="topleft"
     label="Send Message"
     name="ai_send_btn"
     width="120" />

</panel>
