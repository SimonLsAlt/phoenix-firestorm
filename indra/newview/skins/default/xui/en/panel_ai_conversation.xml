<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
 border="true"
 follows="top|left"
 height="450"
 help_topic="panel_ai_conversation_tab"
 label="Conversation"
 layout="topleft"
 left="0"
 name="AIConversation"
 top="320"
 width="485">
    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="left|top"
     height="32"
     layout="topleft"
     left="10"
     top="14"
     word_wrap="true"
     name="ai_conversation_help_text"
     >
        Use this tab to monitor an AI conversation.
    </text>

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="10"
     name="ai_chat_with">
        Last message from [OTHER_AV]:
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="160"
     layout="topleft"
     left="6"
     top_pad="4"
     width="473" />

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="-156"
     height="156"
     layout="topleft"
     left="10"
     word_wrap="true"
     border="true"
     name="last_av_message"
     width="465">
        No chat message recieved yet
    </text>


    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="10"
     name="ai_chat_from">
        Last message generated by [AI_SERVICE_NAME]:
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="160"
     layout="topleft"
     left="6"
     top_pad="4"
     width="473" />

    <text_editor
     enabled="true"
     follows="top"
     top_pad="-156"
     height="156"
     layout="topleft"
     left="10"
     max_length="1024"
     name="ai_chat_editor"
     width="465"
     border="true"
     word_wrap="true">
        No reply from chat system yet
    </text_editor>

    <button
     enabled="true"
     follows="top"
     top_pad="12"
     layout="topleft"
     left="20"
     height="24"
     label="Send IM"
     name="ai_send_btn"
     width="96" />
</panel>
