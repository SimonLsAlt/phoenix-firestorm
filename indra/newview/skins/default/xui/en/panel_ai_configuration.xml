<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
 border="true"
 follows="top|left"
 height="450"
 help_topic="panel_ai_configuration_tab"
 label="Config"
 layout="topleft"
 left="0"
 name="AIConfiguration"
 top="320"
 width="485">
    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="left|top"
     height="32"
     layout="topleft"
     left="10"
     top="14"
     word_wrap="true"
     name="ai_configuration_help_text"
     >
        Enable, select and configure an AI service for IM chat responses.
    </text>

    <check_box
     follows="top"
     height="23"
     label="Enable AI-based chat service:  "
     layout="topleft"
     left="20"
     name="chat_on"
     tool_tip="Checking this box will use an AI service for IM chat"
     top_delta="32"
     width="182" />

    <combo_box
     enabled="true"
     height="23"
     follows="left|top"
     top_pad="-21"
     left_pad="2"
     name="service"
     visible="true"
     width="120">
        <combo_box.item
         label="Kindroid.ai"
         name="Kindroid.ai"
         value="Kindroid.ai" />
        <combo_box.item
         label="Nomi.ai"
         name="Nomi.ai"
         value="Nomi.ai" />
        <combo_box.item
         label="OpenAI"
         name="OpenAI"
         value="OpenAI" />
        <combo_box.item
         label="LM Studio"
         name="LMStudio"
         value="LMStudio" />
    </combo_box>

    <view_border
     bevel_style="none"
     follows="top"
     height="360"
     layout="topleft"
     left="6"
     top_pad="8"
     width="470" />

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="-350"
     height="23"
     layout="topleft"
     left="20"
     name="endpoint_prompt"
     width="120">
        API Endpoint:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     font="SansSerif"
     follows="left|top"
     left_pad="10"
     height="23"
     layout="topleft"
     max_length_bytes="1024"
     name="endpoint"
     width="320" />

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="20"
     name="api_key_prompt"
     width="120">
        API Key:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     font="SansSerif"
     follows="left|top"
     left_pad="10"
     height="23"
     layout="topleft"
     max_length_bytes="256"
     name="api_key"
     width="320" />

    <text
     type="string"
     length="1"
     font="SansSerif"
     follows="top"
     top_pad="12"
     height="23"
     layout="topleft"
     left="20"
     name="character_id_prompt"
     width="120">
        Character ID:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     font="SansSerif"
     follows="left|top"
     left_pad="10"
     height="23"
     layout="topleft"
     max_length_bytes="256"
     name="character_id"
     width="320" />
    <button
     enabled="true"
     top_pad="12"
     layout="topleft"
     left="20"
     top="410"
     height="24"
     label="Apply"
     name="apply_btn"
     width="108">
    </button>
  </panel>
